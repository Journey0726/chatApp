.body {
  margin-top: 100rpx;
  padding-bottom: 50rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  padding: 10rpx;
}
.body .friend {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  height: 96rpx;
}
.body .friend .friendList {
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding-top: 20rpx;
}
.body .friend .friendList:active {
  background-color: #f3f4f6;
}
.body .friend .friendList .friendList-L {
  margin-left: 30rpx;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
}
.body .friend .friendList .friendList-L image {
  width: 96rpx;
  height: 96rpx;
  border: 1px solid;
  border-radius: 20rpx;
  background-color: #ffe431;
}
.body .friend .friendList .friendList-L .tip {
  z-index: 20;
  font-size: 24rpx;
  border-radius: 18rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  min-width: 36rpx;
  border: 1px solid;
  position: absolute;
  right: -10rpx;
  top: -6rpx;
  background-color: #ff5d5b;
  color: #fff;
}
.body .friend .friendList .friendList-R {
  margin-left: 30rpx;
}
.body .friend .friendList .friendList-R .name {
  font-size: 36rpx;
  font-weight: 400;
  color: #272833;
  line-height: 50rpx;
}
.body .friend .friendList .friendList-R .time {
  position: absolute;
  color: rgba(39, 40, 50, 0.6);
  font-size: 24rpx;
  right: 20rpx;
  line-height: 50rpx;
  top: 0;
}
.body .friend .friendList .friendList-R .info {
  width: 500rpx;
  position: absolute;
  font-size: 28rpx;
  color: rgba(39, 40, 50, 0.6);
  line-height: 40rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

